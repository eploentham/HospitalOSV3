package com.hospital_os.object;

import com.hospital_os.usecase.connection.Persistent;

/**
 *
 * @author henbe
 */
public abstract class X39Persistent extends Persistent{
 
   public abstract String getIdTable();
   public abstract String[] getStringArray();
   public abstract void setStringArray(String[] array);
   public abstract X39Persistent getInstant(String[] strd);

    public String getStream(String split) {
        String[] array = getStringArray();
        StringBuffer sb = new StringBuffer();
        for(int i=0;i<array.length;i++){
            if(i!=0)
                sb.append(split);
            sb.append(array[i]);
        }
        return sb.toString();
    }
    public static String getStream(int length, String split) {
        StringBuffer sb = new StringBuffer();
        for(int i=0;i<length;i++){
            if(i!=0)
                sb.append(split);
            sb.append("?");
        }
        return sb.toString();
    }

    public void generateOID() {
        this.generateOID(this.getIdTable());
    }
}
